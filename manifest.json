{
  "manifest_version": 2,
	"name": "Slider",
	"version": "3.1",

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"videoSpeedController.js"
			],
			"all_frames": true,
			"run_at": "document_idle"
		}
	],

	"incognito": "split",

  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  }
}